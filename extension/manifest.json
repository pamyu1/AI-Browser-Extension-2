{
  "manifest_version": 3,
  "name": "AI Browser Extension",
  "version": "1.0.0",
  "description": "Transform webpages with natural language commands powered by AI",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Browser Extension"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:8000 http://127.0.0.1:8000"
  }
}
